# cPanel Email Configuration
# Replace these values with your actual cPanel email settings

# cPanel SMTP Settings
CPANEL_SMTP_HOST=mail.yourdomain.com
CPANEL_SMTP_PORT=587
# Use 587 for TLS, 465 for SSL, 25 for non-secure (not recommended)

# cPanel Email Credentials
CPANEL_EMAIL_USER=your-email@yourdomain.com
CPANEL_EMAIL_PASS=your-email-password

# Sender Information
CPANEL_SENDER_NAME=ISAMC Team

# Contact/Admin Email (where form submissions go)
CONTACT_EMAIL=admin@yourdomain.com

# Alternative configuration for SSL (port 465)
# CPANEL_SMTP_PORT=465
# This will automatically use SSL when port 465 is detected

# JWT Secrets (keep these secure and unique)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-refresh-jwt-secret-here

# Database
MONGODB_URI=your-mongodb-connection-string

# Server
PORT=5000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:5173
